<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:elevation="0dp"
        android:background="@color/cardview_dark_background"
        android:id="@+id/appbarid">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:src="@drawable/default_restaurant"
            android:id="@+id/restaurant_image"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="BOOKMARK"
            android:paddingHorizontal="10dp"
            android:textColor="#FFF"
            android:background="@drawable/roundedbutton_effect"
            android:id="@+id/markBtn"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:id="@+id/name"
        android:textAlignment="center"
        android:text="This is the name of the restaurant"
        android:textColor="#FFF">
    </com.google.android.material.textview.MaterialTextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:id="@+id/ratingBox">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating_good"
                android:id="@+id/rating_good">

            </androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="0"
                android:textColor="#FFF"
                android:paddingLeft="24dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/rating_good"
                android:id="@+id/rating_good_v"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating_ok"
                android:id="@+id/rating_ok">

            </androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="0"
                android:textColor="#FFF"
                android:paddingLeft="24dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/rating_ok"
                android:id="@+id/rating_ok_v"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating_bad"
                android:id="@+id/rating_bad">

            </androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="0"
                android:textColor="#FFF"
                android:paddingLeft="24dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/rating_bad"
                android:id="@+id/rating_bad_v"
                android:gravity="center"
                />

        </RelativeLayout>



    </RelativeLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:id="@+id/restaurant_description"
        android:text="Description of restaurant"
        android:textColor="#FFF">
    </com.google.android.material.textview.MaterialTextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:id="@+id/opening"
            android:text="No information"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textColor="#FFF">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:paddingStart="20dp"
            android:layout_toEndOf="@+id/opening"
            android:id="@+id/time"
            android:text="time slot"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textColor="#FFF">
        </com.google.android.material.textview.MaterialTextView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_ic"
            android:id="@+id/address_ic"
            android:layout_centerVertical="true"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_ic"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:text="The formatted address"
            android:textColor="#FFF"
            android:id="@+id/address"

            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_restaurant_menu_black_24dp"
            android:id="@+id/type_ic"
            android:layout_centerVertical="true"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/type_ic"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:text="Cusine Type Not Specified"
            android:textColor="#FFF"
            android:id="@+id/type"

            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attach_money_black_24dp"
            android:id="@+id/price_ic"
            android:layout_centerVertical="true"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price_ic"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:text="Price Level Not Specified"
            android:textColor="#FFF"
            android:id="@+id/price"

            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:text="Update Details"
            android:paddingHorizontal="5dp"
            android:id="@+id/updateBtn"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/cardview_dark_background"
            android:paddingStart="10dp"
            android:textColor="#FFF"
            android:text="REVIEWS"
            android:gravity="left|center"
            android:textStyle="bold"
            android:id="@+id/review"


            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/review"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/cardview_dark_background"
            android:layout_below="@id/recyclerView"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Write Reviews"
                android:textSize="15dp"
                android:textColor="#000"
                android:id="@+id/reviewBtn"
                />



        </RelativeLayout>


    </RelativeLayout>

    </LinearLayout>

</ScrollView>