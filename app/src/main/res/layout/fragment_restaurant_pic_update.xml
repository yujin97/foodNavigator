<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".restaurantDetail.RestaurantPicUpdateFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:id="@+id/restaurantName"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:text="LOADING..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/picHolder"
        android:layout_below="@id/restaurantName">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/default_restaurant"
            app:civ_border_color="@color/cardview_dark_background"
            app:civ_border_width="2dp" />
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="EDIT"
        android:textColor="#FFF"
        android:background="@drawable/roundedbutton_effect"
        android:layout_below="@id/picHolder"
        android:layout_centerHorizontal="true"
        android:id="@+id/editBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="CONFIRM"
        android:textColor="#FFF"
        android:alpha="0.2"
        android:background="@drawable/roundedbutton_effect"
        android:layout_below="@id/editBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/confirmBtn"/>


</RelativeLayout>